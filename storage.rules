rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 画像フォルダ以下のすべてのファイルに対するルール
    match /images/{allPaths=**} {
      // 誰でも画像の読み取り（表示）は許可する
      allow read;

      // 書き込み（アップロード）は、ログインしているユーザーのみ許可する
      // これには、あなたのアプリが自動的に行う「匿名ログイン」も含まれます。
      allow write: if request.auth != null;
    }
  }
}