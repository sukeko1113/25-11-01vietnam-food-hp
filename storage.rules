rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /images/{allPaths=**} {
      // 誰でも画像の読み取りを許可
      allow read;
      // ログインしているユーザーのみ、10MB未満の画像ファイルの書き込みを許可
      allow write: if request.auth != null
                  && request.resource.size < 10 * 1024 * 1024
                  && request.resource.contentType.matches('image/.*');
    }
  }
}